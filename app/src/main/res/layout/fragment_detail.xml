<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sackcentury.shinebuttonlib.ShineButton
        android:id="@+id/btn_star"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/tv_key"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-38dp"
        android:layout_toStartOf="@+id/icon_speech"
        android:src="@android:color/darker_gray"
        app:allow_random_color="false"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="@android:color/holo_orange_light"
        app:siShape="@raw/star" />

    <TextView
        android:id="@+id/tv_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="outset"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_word_detail"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_phono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_key"
        android:layout_alignStart="@id/tv_key"
        android:layout_alignLeft="@id/tv_key"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="18dp"
        android:text="['autset]"
        android:textColor="@color/color_word_other" />

    <ImageView
        android:id="@+id/icon_speech"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@id/tv_key"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginRight="33dp"
        android:padding="8dp"
        android:src="@mipmap/icon_speaker_off" />

    <ImageView
        android:id="@+id/iv_trans"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_phono"
        android:layout_alignStart="@+id/iv_exam"
        android:layout_marginTop="31dp"
        android:scaleType="fitXY"
        android:src="@mipmap/word_trans" />

    <TextView
        android:id="@+id/tv_trans"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_trans"
        android:layout_alignStart="@id/iv_trans"
        android:layout_alignLeft="@id/iv_trans"
        android:layout_alignEnd="@id/iv_trans"
        android:layout_alignRight="@id/iv_trans"
        android:layout_marginTop="10dp"
        android:text="n. 开始，开端"
        android:textColor="@color/color_trans_detail"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_exam"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_trans"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/word_example" />

    <TextView
        android:id="@+id/tv_exam"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_exam"
        android:layout_alignStart="@id/iv_exam"
        android:layout_alignLeft="@id/iv_exam"
        android:layout_alignEnd="@id/iv_exam"
        android:layout_alignRight="@id/iv_exam"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="2dp"
        android:text="1. Certain problems were apparent from the outset.
2. The teacher laid emphasis on the precision of the translation from the outset.
3. The start or initial stage; the outset."
        android:textColor="@color/color_word_other"
        android:textSize="14sp" />
    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>