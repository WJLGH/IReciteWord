<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewActivity">

    <TextView
        android:id="@+id/tv_hint"
        style="@style/buttontext_normal"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"
        android:gravity="center_horizontal"
        android:text="中文"
        android:textSize="30sp" />

    <Button
        style="@style/buttontext_normal"
        android:id="@+id/btn_c0"
        android:layout_width="187dp"

        android:background="@drawable/shap_btn_normall"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp" />

    <Button
        android:layout_below="@id/btn_c0"
        style="@style/buttontext_normal"
        android:id="@+id/btn_c1"
        android:background="@drawable/shap_btn_normall"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
         />

    <Button
        android:layout_below="@id/btn_c1"
        style="@style/buttontext_normal"
        android:id="@+id/btn_c2"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shap_btn_normall"

        />

    <Button
        android:layout_below="@id/btn_c2"
        style="@style/buttontext_normal"
        android:id="@+id/btn_c3"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shap_btn_normall"

         />

</RelativeLayout>